{
  "manifest_version": 3,
  "name": "Regex Box",
  "description": "A Regular Expression search box for chrome",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",    // i.e. when the user clicks the popup icon, render `popup.html`
    "default_icon": {
      "16": "icons/icons_16.png",
      "24": "icons/icons_24.png",
      "32": "icons/icons_32.png",
      "48": "icons/icons_48.png",
      "64": "icons/icons_64.png",
      "72": "icons/icons_72.png",
      "96": "icons/icons_96.png",
      "128": "icons/icons_128.png",
      "256": "icons/icons_256.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*", "file://*/*" ],
      "js": [ "js/content.js" ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+F",
        "mac": "Command+Shift+F",
        "chromeos": "Ctrl+Shift+F",
        "linux": "Ctrl+Shift+F"
      }
    }
  },
  "options_page": "options.html"
}
